@model Max.Web.Management.Models.Account.AccountRolesModel

@using (Html.BeginForm("RolesForAjax", "Account", FormMethod.Post, new { id = "RolesForm", @class = "form-horizontal form-bordered" }))
{
    @Html.HiddenFor(m => m.SystemUserId)    
    @Html.HiddenFor(m => m.UserName)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title"><i class="fa fa-bars"></i>设置角色      [@Model.UserName]</h4>
    </div>
    <div class="modal-body form form-horizontal form-bordered margin-left-10 margin-right-10">
        <table class="table table-bordered table-hover margin-top-10 ">

            <tbody>
                <tr>
                    <th style="width:100px">已授权角色</th>
                    <td>
                        @if (ViewBag.UserRoles != null)
                        {
                            foreach (SYS_Role role in ViewBag.UserRoles)
                            {
                                <label>
                                    <input name="Roles" value="@role.SystemRoleId" checked type="checkbox" /><span class="label label-primary">@(role.RoleName)</span>
                                </label>
                            }
                        }
                        else
                        {
                            <label>暂无</label>
                        }

</td>
                <tr>
            </tbody>
        </table>
        <table class="table table-bordered table-hover margin-top-10 ">

            <tbody>
                <tr>
                    <th style="width:100px">未授权角色</th>
            <td>
                @if (ViewBag.OtherRoles != null)
                {
                    foreach (SYS_Role role in ViewBag.OtherRoles)
                    {
                        <label>
                            <input name="Roles" value="@role.SystemRoleId" type="checkbox" /><span class="label label-default">@(role.RoleName)</span>
                        </label>
                    }
                }

            </td>
            </tr>
            </tbody>
        </table>


    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> 保存</button>
    </div>
}