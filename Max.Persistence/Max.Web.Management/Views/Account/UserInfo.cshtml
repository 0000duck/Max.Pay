@model Max.Models.System.SYS_User
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title"><i class="icon-user"></i> 个人资料</h4>
</div>
<div class="modal-body form">
    <form class="form-horizontal form-bordered">
        <div class="form-group">
            <label class="control-label col-md-3">用户名</label>
            <div class="col-md-9 txt">@Model.UserName</div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">姓名</label>
            <div class="col-md-9 txt">@Model.RealName</div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">账号类型</label>
            <div class="col-md-9 txt">@((Max.Models.System.Common.UserType)Model.UserType)</div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">邮箱</label>
            <div class="col-md-9 txt">@Model.Email</div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">手机号码</label>
            <div class="col-md-9 txt">@Model.Mobile</div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
    <button type="button" data-dismiss="modal" class="btn btn-primary"><i class="fa fa-check"></i> 确认</button>
</div>