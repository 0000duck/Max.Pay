@model Query<Bank, Max.Web.Management.Models.Payment.BankParams>
<table class="table loading table-bordered table-hover margin-top-10 margin-bottom-5">
    <thead>
        <tr>
            <th width="30" class="bg-f1">#</th>
            <th>银行名称</th>
            <th>银行代码</th>
            <th>联行号</th>
            <th>状态</th>
            <th width="250">操作</th>
        </tr>
    </thead>
    <tbody>
        @{ var index = 0;}
        @foreach (var item in Model.ItemList)
        {
            <tr>
                <td class="bg-f7">@(++index)</td>
                <td>@item.BankName</td>
                <td>@item.BankCode</td>
                <td>@item.SeqNo</td>
                <td>@((Max.Models.Payment.Common.Enums.BankStatus)item.Status)</td>
                <td class="clearfix">
                    <a itemid="@item.BankId" permid="@PermCode.编辑银行.Code()" class="edit btn btn-primary btn-sm"><i class="fa fa-edit"></i> 编辑</a>
                    <a itemid="@item.BankId" permid="@PermCode.删除银行.Code()" itemname="@(item.BankName)" class="delete btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> 删除</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@Html.GridPager(Model)

