@model SYS_Role
@{
    var POST_Action = (Model != null && !Model.SystemRoleId.IsNullOrEmpty()) ? "EditForAjax" : "AddForAjax";
    var TITLE = (Model != null && !Model.SystemRoleId.IsNullOrEmpty()) ? "编辑角色" : "新增角色";
}
@using (Html.BeginForm(POST_Action, "Roles", FormMethod.Post, new { id = "AddOrEditRoleForm", @class = "form-horizontal form-bordered" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title"><i class="fa fa-bars"></i> @TITLE</h4>
    </div>
    <div class="modal-body form form-horizontal form-bordered">
        @Html.HiddenFor(m => m.SystemRoleId)
        @Html.HiddenFor(m => m.CreateTime)
        <div class="form-group margin-top-15">
            <label class="control-label col-md-3">角色名称</label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RoleName)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">状态</label>
            <div class="col-md-8">
             @Html.SelectFor(m => m.Status, typeof(Max.Models.System.Common.UserStatus))
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> @TITLE</button>
    </div>
}