@model PayService
@{
    var POST_Action = (Model != null && !Model.ServiceId.IsNullOrEmpty()) ? "EditForAjax" : "AddForAjax";
    var TITLE = (Model != null && !Model.ServiceId.IsNullOrEmpty()) ? "编辑" : "新增";
}
@using (Html.BeginForm(POST_Action, "PayProduct", FormMethod.Post, new { id = "addOrEditForm", @class = "form-horizontal form-bordered" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title"><i class="fa fa-bars"></i> @TITLE</h4>
    </div>
    <div class="modal-body form form-horizontal form-bordered">
        @Html.HiddenFor(m => m.ServiceId)

        <div class="form-group margin-top-15">
            <label class="control-label col-md-3">产品名称</label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ServiceName)
            </div>
        </div>
        <div class="form-group margin-top-15">
            <label class="control-label col-md-3">产品类型</label>
            <div class="col-md-8">
                @Html.SelectFor(m => m.ServiceType, typeof(Max.Models.Payment.Common.Enums.ServiceType))
                @Html.ValidationMessageFor(m => m.ServiceType)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">产品代码</label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.ServiceCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ServiceCode)
            </div>
        </div>

        <div class="form-group margin-top-15">
            <label class="control-label col-md-3">状态</label>
            <div class="col-md-8">
                @Html.SelectFor(m => m.Status, typeof(Max.Models.Payment.Common.Enums.BankStatus))
                @Html.ValidationMessageFor(m => m.Status)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">备注</label>
            <div class="col-md-8">
                @Html.TextAreaFor(m => m.Remark, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Remark)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> @TITLE</button>
    </div>

}