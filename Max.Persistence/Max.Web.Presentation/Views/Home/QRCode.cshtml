@{
    Layout = null;
    var fixTitle = string.Format("{0}{1}", ViewData["PayType"] ?? "扫码", "支付");
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" id="viewport" content="width=device-width, initial-scale=1">
    <title>@fixTitle</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.0.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="panel">
                <div class="panel-body">
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
                        <img style="width:100%;" src="@Html.Raw(ViewData["QRCODE"])" />
                    </div>
                </div>
            </div>
            <div class="panel">
                <p class="panel-info text-center col-xs-12 col-sm-12 col-md-12 col-lg-12">点击图片保存到手机，然后打开 @fixTitle，从相册选择二维码</p>
            </div>
        </div>
    </div>
</body>
</html>
